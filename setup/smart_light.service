[Unit]
Description=Gunicorn instance to serve smart_light
After=network.target

[Service]
User=pi
Group=pi
Environment="PATH=/home/pi/.local/bin"
WorkingDirectory=/home/pi/smart_light/
ExecStart=gunicorn -k uvicorn.workers.UvicornWorker --bind 0.0.0.0:8000 --workers 4 app.api:app

[Install]
WantedBy=multi-user.target